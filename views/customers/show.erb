<h2><%= @customer.name %></h2>

<p>Address: <%= @customer.address %></p>

<p>Tel: <%= @customer.tel %></p>

<h3>Animals:</h3>

<ul>
    <% @customer.animals.each do |animal| %>
        <li><%= animal.name %></li>
    <% end %>
</ul>

<a href="/customers/<%= @customer.id %>/edit">Edit</a>
<form action="/customers/<%= @customer.id %>/delete" method="POST"><input type="submit" value="Delete"></form>