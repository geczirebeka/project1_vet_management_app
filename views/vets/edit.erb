<form method="POST" action="/vets/<%= @vet.id %>">
    <div class="form-wrapper">
    
        <div class="form-el">
            <label for="first_name">First Name:</label>
            <input type="text" name="first_name" id="first_name" value="<%= @vet.first_name %>"/>
        </div>

        <div class="form-el">
            <label for="last_name">Last Name:</label>
            <input type="text" name="last_name" id="last_name" value="<%= @vet.last_name%>"/>
        </div>

        <div class="form-el">
            <input type="submit" value="Edit Vet"/>
        </div>


    </div>
</form>