<h2>New Animal</h2>
<form method="POST" action="/animals">
  <div class="form-wrapper">
    
    <div class="form-el">
      <label for="name">Name:</label>
      <input type="text" name="name" id="name"/>
    </div>

    <div class="form-el">
      <label for="dob">DOB:</label>
      <input type="text" name="dob" id="dob"/>
    </div>

    <div class="form-el">
      <label for="type">Type:</label>
      <input type="text" name="type" id="type"/>
    </div>

    <div class="form-el">
      <label for="contact_details">Contact Details of Owner:</label>
      <input type="text" name="contact_details" id="contact_details"/>
    </div>

    <div class="form-el">
      <label for="treatment_notes">Treatment Notes:</label>
      <input type="text" name="treatment_notes" id="treatment_notes"/>
    </div>

    <div class="form-el">
        <label for="customer_select">Select Owner:</label>
        <select name="customer_id" id="customer_select">
            <% @customers.each do |customer| %>
                <option value=<%= customer.id %>><%= customer.name %></option>
            <% end %>
        </select>
    </div>

    <div class="form-el">
      <label for="vet_select">Select Vet:</label> 
      <select name="vet_id" id="vet_select">
        <% @vets.each do |vet| %>
            <option value=<%= vet.id %>><%= vet.full_name %></option>
        <% end %>
      </select>
    </div>

    <div class="form-el">
      <input type="submit" value="Create Animal"/>
    </div>

  </div>
</form>