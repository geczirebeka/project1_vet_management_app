<form method="POST" action="/animals/<%= @animal.id %>">
    <div class="form-wrapper">
    
        <div class="form-el">
            <label for="name">Name:</label>
            <input type="text" name="name" id="name" value="<%= @animal.name %>"/>
        </div>

        <div class="form-el">
            <label for="dob">DOB:</label>
            <input type="text" name="dob" id="dob" value="<%= @animal.dob%>"/>
        </div>

        <div class="form-el">
            <label for="type">Type:</label>
            <input type="text" name="type" id="type" value="<%= @animal.type%>"/>
        </div>

        <div class="form-el">
            <label for="contact_details">Contact Details:</label>
            <input type="text" name="contact_details" id="contact_details" value="<%= @animal.contact_details%>"/>
        </div>

        <div class="form-el">
            <label for="treatment_notes">Treatment Notes:</label>
            <input type="text" name="treatment_notes" id="treatment_notes" value="<%= @animal.treatment_notes%>"/>
        </div>

        <div class="form-el">
            <label for="customer_select">Select Owner:</label>
            <select name="customer_id" id="customer_select" selected="<%= @animal.customer_id %>">
                <% @customers.each do |customer| %>
                    <% if customer.id == @animal.customer_id %>
                        <option value=<%= customer.id %> selected><%= customer.name %></option>
                    <% else %>
                        <option value=<%= customer.id %>><%= customer.name %></option>
                    <% end %>
                <% end %>
            </select>
        </div>

        <div class="form-el">
            <label for="vet_select">Select Vet:</label> 
            <select name="vet_id" id="vet_select">
                <% @vets.each do |vet| %>
                    <% if vet.id == @animal.vet_id %>
                        <option value=<%= vet.id %> selected><%= vet.full_name %></option>
                    <% else %>
                        <option value=<%= vet.id %>><%= vet.full_name %></option>
                    <% end %>
                <% end %>
            </select>
        </div>

        <div class="form-el">
            <input type="submit" value="Edit Animal"/>
        </div>


    </div>
</form>